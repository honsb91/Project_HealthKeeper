<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mapper.NoticeMapper">
 
 	<!-- 공지사항 등록 -->
 	<insert id="notregistr">
 		INSERT INTO NOTICE (NOTICE_TITLE, NOTICE_CONTENT, NOTICE_WRITER)
 		VALUES (#{NOTICE_TITLE},#{NOTICE_CONTENT},#{NOTICE_WRITER})
 	</insert>
 	
 	<!-- 공지사항 목록 -->
    <select id="getlist" resultType="kr.co.model.NoticeVO">
 		SELECT * FROM NOTICE
    </select>
    
    <!-- 공지사항 목록(페이징 유지처리) -->
    <select id="getListPaging" resultType="kr.co.model.NoticeVO">
    <![CDATA[
        SELECT NOTICE_BNO, NOTICE_TITLE, NOTICE_CONTENT, NOTICE_WRITER, NOTICE_REGDATE, NOTICE_VIEWS
        FROM (
              SELECT /*+INDEX_DESC(NOTICE PK_NOTICE) */ 
              ROWNUM AS RN, NOTICE_BNO, NOTICE_TITLE, NOTICE_CONTENT, NOTICE_WRITER, NOTICE_REGDATE,NOTICE_VIEWS
              FROM NOTICE 
              WHERE ROWNUM <= #{pageNum} * #{amount} 
              ]]>
              <if test="keyword !=null">
                <include refid="notcriteria"></include>
              </if>
    <![CDATA[
              )
        WHERE RN > (#{pageNum} -1) * #{amount}
    ]]>
</select>
    
    <!-- 공지사항 조회 -->
    <select id="getPage" resultType="kr.co.model.NoticeVO">
        SELECT * FROM NOTICE 
        WHERE NOTICE_BNO = #{NOTICE_BNO}
    </select>
    
    <!-- 공지사항 수정 -->
    <update id="notmodify">
        UPDATE NOTICE 
        SET NOTICE_TITLE = #{NOTICE_TITLE, jdbcType=VARCHAR},
        NOTICE_CONTENT = #{NOTICE_CONTENT, jdbcType=VARCHAR}
        WHERE NOTICE_BNO = #{NOTICE_BNO}
    </update>
    
    <!-- 공지사항 삭제 -->
    <delete id="notdelete">
        DELETE FROM NOTICE 
        WHERE NOTICE_BNO = #{NOTICE_BNO}
    </delete>
    
    <!-- 공지사항 게시글 총 갯수 -->
    <select id="getTotal" resultType="int">
        SELECT COUNT(*) FROM NOTICE
        <if test="keyword != null">
        	WHERE NOTICE_BNO > 0 <include refid="notcriteria"></include>
        </if>
    </select>
    
    <!-- 검색 조건문 -->
    <sql id="notcriteria">
        <trim prefix="AND (" suffix=")" prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            NOTICE_TITLE LIKE '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'C'.toString()">
                            NOTICE_CONTENT LIKE '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'W'.toString()">
                            NOTICE_WRITER LIKE '%'||#{keyword}||'%' 
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>
    
    <!-- 게시판 조회수 -->
    <update id="noticeViews">
    	UPDATE NOTICE
    	SET 
    	NOTICE_VIEWS = NOTICE_VIEWS + 1
    	WHERE NOTICE_BNO = #{NOTICE_BNO}
    </update> 
</mapper>