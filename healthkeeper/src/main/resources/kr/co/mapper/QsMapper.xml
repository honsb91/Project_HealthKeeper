<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mapper.QsMapper">

	<!-- 게시판 등록 -->
	<insert id="qsregistr" parameterType="kr.co.model.QsVO" useGeneratedKeys="true">
    	<selectKey keyProperty="QS_BNO" resultType="int" order="AFTER">
        	SELECT ISEQ$$_88612.CURRVAL FROM DUAL
    	</selectKey>
    		INSERT INTO QUESTION (QS_TITLE, QS_CONTENT, QS_WRITER)
    		VALUES (#{QS_TITLE}, #{QS_CONTENT}, #{QS_WRITER})
	</insert>
	
	<!-- 게시판 목록 -->
	<select id="getlist" resultType="kr.co.model.QsVO">
		SELECT * FROM QUESTION
		ORDER BY QS_BNO DESC
	</select>
	
	<!-- 게시판 목록(페이징 유지처리) -->
	<select id="getlistPaging" resultType="kr.co.model.QsVO">
    <![CDATA[
        SELECT QS_BNO, QS_TITLE, QS_CONTENT, QS_WRITER, QS_REGDATE
        FROM(        
              SELECT /*+INDEX_DESC(QUESTION PK_QUESTION) */ 
              ROWNUM AS RN, QS_BNO, QS_TITLE, QS_CONTENT, QS_WRITER, QS_REGDATE
              FROM QUESTION 
              WHERE ROWNUM <= #{pageNum} * #{amount}
    	]]>
    		<if test="Keyword !=null">
    			<include refid="qscriteria"></include>
    		</if>
        <![CDATA[
        	  )
        	WHERE RN > (#{pageNum} -1) * #{amount}
        ]]>
    </select>
	
	<!-- 게시판 글 총 갯수 -->
	<select id="getTotal" resultType="int">
		SELECT COUNT (*) FROM QUESTION
		<if test="Keyword != null">
			WHERE QS_BNO > 0 <include refid="qscriteria"></include>
		</if>
	</select>
	
	<!-- 검색 조건문 -->
    <sql id="qscriteria">
        <trim prefix="AND (" suffix=")" prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            QS_TITLE LIKE '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'C'.toString()">
                            QS_CONTENT LIKE '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'W'.toString()">
                            QS_WRITER LIKE '%'||#{keyword}||'%' 
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>
	
	<!-- 게시판 조회 -->
	<select id="getpage" resultType="kr.co.model.QsVO">
		SELECT * FROM QUESTION
		WHERE QS_BNO = #{QS_BNO}
	</select>
	
	<!-- 게시판 수정 -->
	<update id="update">
		UPDATE QUESTION
		SET
		QS_TITLE = #{QS_TITLE},
		QS_CONTENT = #{QS_CONTENT}
		WHERE QS_BNO = #{QS_BNO}
	</update>
	
	<!-- 게시판 삭제 -->
	<delete id="delete">
		DELETE FROM QUESTION
		WHERE QS_BNO = #{QS_BNO}
	</delete>
</mapper>